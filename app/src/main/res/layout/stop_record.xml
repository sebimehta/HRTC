<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/cardview_light_background"
    tools:context="com.example.user.hrtc.Stop_record">

    <!--TOOLBAR-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF58A7EC"
        android:id="@+id/toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <!-- MAIN OUTER LAYOUT-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_weight="1">

        <!-- SCROLL VIEW-->
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:context="com.example.user.HRTC.LoginActivity">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="hideKeyboard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:weightSum="1"
                    android:background="@android:color/white">

                    <!--HRTC LOGO-->
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/abc" />

                    <!--TABLE LAYOUT-->
                    <!-- Table - 1-->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:gravity="center"
                        android:id="@+id/tableLayout1">

                        <!--Table-1, ROW- 1-->
                        <TableRow
                            android:id="@+id/row_1"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1dp">

                            <TextView
                                android:id="@+id/BusNumberDetails"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="0.25"
                                android:textSize="20dp"
                                android:background="#FF58A7EC"
                                android:gravity="center"
                                android:text="Bus\nNumber"
                                android:textStyle="bold"
                                android:textColor="#fff" />

                            <Button
                                android:id="@+id/stop_BusNoID"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:background="#FF58A7"
                                android:gravity="center"
                                android:text="ABC\n1001"
                                android:textStyle="bold"
                                android:textColor="#fff" />
                        </TableRow>

                        <!--Table-1, ROW- 2-->

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border"
                            android:layout_marginTop="2dp">

                            <TextView
                                android:id="@+id/RouteNo"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="0.25"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="Route No "
                                android:textStyle="bold"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/stop_RouteID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/border"
                                android:text=""
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-1, ROW- 3-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/From"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.25"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="From"
                                android:textColor="#000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/stop_FromID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textAlignment="center"
                                android:background="@drawable/border"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-1, ROW- 4-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/To"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:text="To"
                                android:textStyle="bold"
                                android:background="@drawable/border"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/stop_ToID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textAlignment="center"
                                android:background="@drawable/border"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-1, ROW- 5-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/BusTypeID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:text="Bus Type"
                                android:textStyle="bold"
                                android:background="@drawable/border"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/stop_BusTypeID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textAlignment="center"
                                android:background="@drawable/border"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-1, ROW- 6-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/VehicleNo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:text="Vehicle No "
                                android:textStyle="bold"
                                android:background="@drawable/border"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/stop_VehicleNoID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textAlignment="center"
                                android:background="@drawable/border"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-1, ROW- 7-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:text="STATUS"
                                android:background="@drawable/border"
                                android:textStyle="bold"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/stop_StatusID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/border"
                                android:text=""
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-1, ROW- 8-->

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <Button
                                android:id="@+id/Route_Map"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.35"
                                android:gravity="center"
                                android:text="VIEW ON MAP "
                                android:textSize="23dp"
                                android:background="#FF58A7"
                                android:textStyle="bold"
                                android:textColor="#fff" />
                        </TableRow>

                        <!--Table-1, ROW- 9-->

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/border">

                            <Button
                                android:id="@+id/Route_Refresh"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.35"
                                android:background="#FF58A7EC"
                                android:gravity="center"
                                android:text="REFRESH"
                                android:textStyle="bold"
                                android:textSize="23dp"
                                android:textColor="#fff" />
                        </TableRow>

                    </TableLayout>

                    <!-- Table-2 -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="490dp"
                        android:gravity="center"
                        android:id="@+id/tableLayout2">

                        <!--Table-2, ROW- 1-->

                        <TableRow
                            android:id="@+id/row_2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border"
                            android:layout_marginTop="2dp">

                            <TextView
                                android:id="@+id/Route_Details"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="0.85"
                                android:background="#FF0"
                                android:gravity="left|center"
                                android:textAlignment="center"
                                android:text="BUS STOP"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/Route_ExptTimeDetails"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:textAlignment="center"
                                android:background="#FF0"
                                android:text="Expt. Time"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-2, ROW- 2-->

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="0.85"
                                android:gravity="left|center"
                                android:textAlignment="center"
                                android:text="ABC"
                                android:background="@android:color/holo_green_light"
                                android:textStyle="bold"
                                android:textColor="#000" >


                            </TextView>

                            <TextView
                                android:id="@+id/RouteId2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:background="@android:color/holo_green_light"
                                android:text="10:45"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="0.85"
                                android:gravity="left|center"
                                android:textAlignment="center"
                                android:text="MNO"
                                android:background="@android:color/holo_green_light"
                                android:textStyle="bold"
                                android:textColor="#000" >


                            </TextView>

                            <TextView
                                android:id="@+id/RouteId4"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:background="@android:color/holo_green_light"
                                android:text="2:15"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>


                        <!--Table-2, ROW- 3-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/holo_red_light">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.85"
                                android:gravity="left|center"
                                android:textAlignment="center"
                                android:text="XYZ"
                                android:textStyle="bold"
                                android:background="@android:color/holo_red_light"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/FromId2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="13:45"
                                android:textAlignment="center"
                                android:background="@android:color/holo_red_light"
                                android:textStyle="bold"
                                android:textColor="#000" />
                        </TableRow>

                        <!--Table-2, ROW- 4-->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/holo_red_light">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="0.85"
                                android:textAlignment="center"
                                android:gravity="left|center"
                                android:text="PQR"
                                android:textStyle="bold"
                                android:background="@android:color/holo_red_light"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/ToId2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:gravity="left|center"
                                android:text="21:30"
                                android:textStyle="bold"
                                android:background="@android:color/holo_red_light"
                                android:textColor="#000" />
                        </TableRow>

                    </TableLayout>
                </RelativeLayout>
            </FrameLayout>
        </ScrollView>
    </RelativeLayout>



</LinearLayout>
