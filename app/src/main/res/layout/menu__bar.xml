<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wall1"
    tools:context="com.example.user.hrtc.Main_Menu_Bar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/HRTCLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textGrid"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:src="@drawable/abc" />

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:text=" HRTC LIVE BUS TRACKING"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:layout_gravity="center"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3">

        <!---Row 1-->
        <!---column 1-->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_rowWeight="1"
            android:background="#1CACEB"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSearch"
                    android:layout_width="195dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:layout_gravity="center"
                    android:text="Search \n(Between Routes)"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15px"
                android:layout_gravity="left|center"
                android:src="@drawable/search" />

        </android.support.v7.widget.CardView>

        <!---Row 2-->
        <!---column 2-->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBusStop"
                    android:layout_width="190dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20sp"
                    android:text="Search By\n BUS STOP"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgBusStop"
                android:layout_width="65dp"
                android:layout_height="57dp"
                android:layout_marginLeft="15px"
                android:layout_gravity="left|center"
                android:src="@drawable/stopbus"
                />
        </android.support.v7.widget.CardView>

        <!---Row 3-->
        <!---column 3-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtLiveStatus"
                    android:layout_marginLeft="20sp"
                    android:layout_width="195dp"
                    android:layout_height="60dp"
                    android:text="  LIVE BUS\n Running Status"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgLiveStatus"
                android:layout_width="72dp"
                android:layout_height="65dp"
                android:layout_marginLeft="15px"
                android:layout_gravity="left|center"
                android:src="@drawable/live2" />

        </android.support.v7.widget.CardView>

        <!---Row 4-->
        <!---column 4-->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtServiceId"
                    android:layout_width="198dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:text="Bus Service Id\n (If Pre-Booked)"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgServiceId"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15px"
                android:layout_gravity="left|center"
                android:src="@drawable/mobile" />

        </android.support.v7.widget.CardView>
    </GridLayout>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/bottom_navigation"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground"/>


</LinearLayout>
