<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.hrtc.Track_Login">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF58A7EC"
        android:id="@+id/toolbar_service"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/toolbar_service"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="109dp"
            android:layout_height="100dp"
            android:src="@drawable/abc"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/toolbar_service"
            android:layout_alignParentStart="true" />

        <!-- Track Id Label -->

        <android.support.design.widget.TextInputEditText
            android:id="@+id/idService"
            android:layout_width="286dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:cursorVisible="true"
            android:hint="Enter Bus Service Id"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@color/cardview_dark_background" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_TrackBus"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="2dp"
            android:background="#000000"
            android:text="Track Bus "
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
